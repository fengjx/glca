{
  "type": "page",
  "name": "sys-config",
  "body": [
    {
      "type": "crud",
      "name": "sys_config",
      "api": {
        "method": "post",
        "url": "${API_BASEURL}/admin/common/query",
        "data": {
          "table_name": "sys_config",
          "order_fields": [
            {
              "field": "${orderBy}",
              "order_type": "${orderDir}"
            }
          ],
          "conditions": [
            {
              "disable": "${!scope}",
              "op": "and",
              "field": "scope",
              "condition_type": "eq",
              "vals": [
                "${scope}"
              ]
            },
            {
              "disable": "${!key}",
              "op": "and",
              "field": "key",
              "condition_type": "like",
              "vals": [
                "%${key}%"
              ]
            },
            {
              "disable": "${!status || status == ''}",
              "op": "and",
              "field": "status",
              "condition_type": "eq",
              "vals": [
                "${status}"
              ]
            }
          ],
          "page": {
            "offset": "${(page - 1) * perPage}",
            "limit": 20,
            "query_count": true
          }
        }
      },
      "filter": {
        "title": "搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "type": "input-text",
                "size": "sm",
                "name": "scope",
                "label": "范围",
                "clearable": true,
                "placeholder": "范围搜索"
              },
              {
                "type": "input-text",
                "size": "sm",
                "name": "key",
                "label": "配置键",
                "clearable": true,
                "placeholder": "配置键搜索"
              },
              {
                "type": "select",
                "size": "sm",
                "label": "状态",
                "name": "status",
                "options": [
                  {
                    "label": "正常",
                    "value": "normal"
                  },
                  {
                    "label": "封禁",
                    "value": "disable"
                  }
                ]
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "button",
            "actionType": "dialog",
            "icon": "fa fa-plus",
            "label": "新增",
            "dialog": {
              "title": "新增",
              "body": {
                "type": "form",
                "name": "add-form",
                "api": {
                  "method": "post",
                  "url": "${API_BASEURL}/admin/common/insert",
                  "data": {
                    "table_name": "sys_config",
                    "row": {
                      "scope": "${scope}",
                      "key": "${key}",
                      "value": "${value}",
                      "status": "${status}",
                      "remark": "${remark}"
                    }
                  }
                },
                "body": [
                  {
                    "type": "input-text",
                    "name": "scope",
                    "label": "范围",
                    "required": true
                  },
                  {
                    "type": "input-text",
                    "name": "key",
                    "label": "配置键",
                    "required": true
                  },
                  {
                    "type": "input-text",
                    "name": "value",
                    "label": "配置值",
                    "required": true
                  },
                  {
                    "label": "状态",
                    "type": "select",
                    "name": "status",
                    "required": true,
                    "options": [
                      {
                        "label": "生效",
                        "value": "normal"
                      },
                      {
                        "label": "无效",
                        "value": "disable"
                      }
                    ]
                  },
                  {
                    "type": "input-text",
                    "name": "remark",
                    "label": "备注"
                  }
                ]
              }
            }
          },
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": {
            "method": "post",
            "url": "${API_BASEURL}/admin/common/delete-by-ids",
            "data": {
              "table_name": "sys_config",
              "id_str": "${ids}"
            }
          },
          "confirmText": "确定要批量删除?"
        }
      ],
      "quickSaveApi": {
        "method": "post",
        "url": "${API_BASEURL}/admin/common/batch-update",
        "data": {
          "table_name": "sys_config",
          "rows": "${rowsDiff}"
        }
      },
      "columns": [
        {
          "name": "id",
          "label": "ID"
        },
        {
          "name": "scope",
          "label": "范围"
        },
        {
          "name": "key",
          "label": "配置键"
        },
        {
          "name": "value",
          "label": "配置值"
        },
        {
          "name": "remark",
          "label": "备注"
        },
        {
          "name": "utime",
          "label": "更新时间",
          "sortable": true,
          "tpl": "${ctime | date:YYYY-MM-DD hh\\:mm\\:ss:x}"
        },
        {
          "name": "ctime",
          "label": "创建时间",
          "sortable": true,
          "tpl": "${ctime | date:YYYY-MM-DD hh\\:mm\\:ss:x}"
        },
        {
          "name": "status",
          "label": "状态",
          "width": 150,
          "quickEdit": {
            "mode": "inline",
            "type": "select",
            "options": [
              "normal",
              "disable"
            ]
          }
        },
        {
          "type": "operation",
          "label": "操作",
          "width": 150,
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "dialog",
              "tooltip": "查看",
              "dialog": {
                "title": "查看信息",
                "body": {
                  "type": "form",
                  "body": [
                    {
                      "type": "static",
                      "name": "id",
                      "label": "ID"
                    },
                    {
                      "type": "static",
                      "name": "scope",
                      "label": "范围"
                    },
                    {
                      "type": "static",
                      "name": "key",
                      "label": "配置键"
                    },
                    {
                      "type": "static",
                      "name": "value",
                      "label": "配置值"
                    },
                    {
                      "type": "static",
                      "name": "status",
                      "label": "配置状态"
                    },
                    {
                      "type": "static",
                      "name": "remark",
                      "label": "备注"
                    },
                    {
                      "type": "static",
                      "name": "utime",
                      "label": "创建时间",
                      "sortable": true,
                      "tpl": "${utime | date:YYYY-MM-DD hh\\:mm\\:ss:x}"
                    },
                    {
                      "type": "static",
                      "name": "ctime",
                      "label": "创建时间",
                      "sortable": true,
                      "tpl": "${ctime | date:YYYY-MM-DD hh\\:mm\\:ss:x}"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-pencil",
              "tooltip": "编辑",
              "actionType": "drawer",
              "drawer": {
                "title": "修改",
                "body": {
                  "type": "form",
                  "api": {
                    "method": "post",
                    "url": "${API_BASEURL}/admin/common/update",
                    "data": {
                      "table_name": "sys_config",
                      "row": {
                        "id": "${id}",
                        "scope": "${scope}",
                        "key": "${key}",
                        "value": "${value}",
                        "status": "${status}",
                        "remark": "${remark}"
                      },
                      "conditions": [
                        {
                          "op": "and",
                          "field": "id",
                          "condition_type": "eq",
                          "vals": [
                            "$id"
                          ]
                        }
                      ]
                    },
                    "messages": {
                      "success": "修改成功"
                    }
                  },
                  "body": [
                    {
                      "type": "static",
                      "name": "id",
                      "label": "ID"
                    },
                    {
                      "type": "input-text",
                      "name": "scope",
                      "label": "范围",
                      "required": true
                    },
                    {
                      "type": "input-text",
                      "name": "key",
                      "label": "配置键",
                      "required": true
                    },
                    {
                      "type": "input-text",
                      "name": "value",
                      "label": "配置值",
                      "required": true
                    },
                    {
                      "label": "状态",
                      "type": "select",
                      "name": "status",
                      "required": true,
                      "options": [
                        {
                          "label": "正常",
                          "value": "normal"
                        },
                        {
                          "label": "封禁",
                          "value": "disable"
                        }
                      ]
                    },
                    {
                      "type": "input-text",
                      "name": "remark",
                      "label": "备注"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "您确认要删除[${id}]?",
              "api": {
                "method": "post",
                "url": "${API_BASEURL}/admin/common/delete",
                "data": {
                  "table_name": "sys_config",
                  "conditions": [
                    {
                      "op": "and",
                      "field": "id",
                      "condition_type": "eq",
                      "vals": [
                        "${id}"
                      ]
                    }
                  ]
                }
              }
            }
          ],
          "toggled": true
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
