{{ $colLen := (len .Table.Columns) }}
{{ $pk := .Table.PrimaryKey }}
{
  "type": "page",
  "name": "{{.TableVar.module}}-{{.TableVar.simpleName}}",
  "body": [
    {
      "type": "crud",
      "name": "{{.Table.Name}}",
      "api": {
        "method": "post",
        "url": "${API_BASEURL}/admin/common/query",
        "data": {
          "table_name": "{{.Table.Name}}",
          "order_fields": [
            {
              "field": "${orderBy}",
              "order_type": "${orderDir}"
            }
          ],
          "conditions": [
            {
              "disable": "${!{{$pk.Name}}}",
              "op": "and",
              "field": "{{$pk.Name}}",
              "condition_type": "eq",
              "vals": [
                "{{$pk.Name}}"
              ]
            },
            {
              "disable": "${!status || status == ''}",
              "op": "and",
              "field": "status",
              "condition_type": "eq",
              "vals": [
                "${status}"
              ]
            }
          ],
          "page": {
            "offset": "${(page - 1) * perPage}",
            "limit": 20,
            "query_count": true
          }
        }
      },
      "filter": {
        "title": "搜索",
        "body": [
          {
            "type": "group",
            "body": [
              {
                "type": "input-text",
                "size": "sm",
                "name": "id",
                "label": "ID",
                "clearable": true,
                "placeholder": "ID搜索"
              },
              {
                "type": "select",
                "size": "sm",
                "label": "状态",
                "name": "status",
                "options": [
                  {
                    "label": "正常",
                    "value": "normal"
                  },
                  {
                    "label": "封禁",
                    "value": "disable"
                  }
                ]
              }
            ]
          }
        ],
        "actions": [
          {
            "type": "button",
            "actionType": "dialog",
            "icon": "fa fa-plus",
            "label": "新增",
            "dialog": {
              "title": "新增用户",
              "body": {
                "type": "form",
                "name": "add-form",
                "api": {
                  "method": "post",
                  "url": "${API_BASEURL}/admin/common/insert",
                  "data": {
                    "table_name": "{{.Table.Name}}",
                    "row": {
                      {{range $i, $e := .Table.Columns}}{{if not (eq $e.Name $pk.Name) }}  "{{$e.Name}}": "{{printf "${%s}" $e.Name}}"{{if lt (Add $i 1) $colLen}},{{end}}{{end}}
                      {{end}}
                    }
                  }
                },
                "body": [
                  {{range $i, $e := .Table.Columns}}{{if not (eq $e.Name $pk.Name) }}
                  {
                    "type": "input-text",
                    "name": "{{$e.Name}}",
                    "label": "{{LineString $e.Comment}}"
                  }{{if lt (Add $i 1) $colLen}},{{end}}{{end}}
                  {{end}}
                ]
              }
            }
          },
          {
            "type": "reset",
            "label": "重置"
          },
          {
            "type": "submit",
            "level": "primary",
            "label": "查询"
          }
        ]
      },
      "bulkActions": [
        {
          "label": "批量删除",
          "type": "button",
          "level": "danger",
          "actionType": "ajax",
          "api": {
            "method": "post",
            "url": "${API_BASEURL}/admin/common/delete-by-ids",
            "data": {
              "table_name": "{{.Table.Name}}",
              "id_str": "${ids}"
            }
          },
          "confirmText": "确定要批量删除?"
        }
      ],
      "quickSaveApi": {
        "method": "post",
        "url": "${API_BASEURL}/admin/common/batch-update",
        "data": {
          "table_name": "{{.Table.Name}}",
          "rows": "${rowsDiff}"
        }
      },
      "columns": [
        {{range $i, $e := .Table.Columns}}
        {
          "name": "{{$e.Name}}",
          "label": "{{LineString $e.Comment}}"
        },
        {{end}}
        {
          "type": "operation",
          "label": "操作",
          "width": 150,
          "buttons": [
            {
              "type": "button",
              "icon": "fa fa-eye",
              "actionType": "dialog",
              "tooltip": "查看",
              "dialog": {
                "title": "查看信息",
                "body": {
                  "type": "form",
                  "body": [
                    {{range $i, $e := .Table.Columns}}
                    {
                      "type": "static",
                      "name": "{{$e.Name}}",
                      "label": "{{LineString $e.Comment}}"
                    }{{if lt (Add $i 1) $colLen}},{{end}}
                    {{end}}
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-pencil",
              "tooltip": "编辑",
              "actionType": "drawer",
              "drawer": {
                "title": "修改记录",
                "body": {
                  "type": "form",
                  "api": {
                    "method": "post",
                    "url": "${API_BASEURL}/admin/common/update",
                    "data": {
                      "table_name": "{{.Table.Name}}",
                      "row": {
                        {{range $i, $e := .Table.Columns}}  "{{$e.Name}}": "{{printf "${%s}" $e.Name}}"{{if lt (Add $i 1) $colLen}},{{end}}
                        {{end}}
                      },
                      "conditions": [
                        {
                          "op": "and",
                          "field": "{{$pk.Name}}",
                          "condition_type": "eq",
                          "vals": [
                            "${{$pk.Name}}"
                          ]
                        }
                      ]
                    },
                    "messages": {
                      "success": "修改成功"
                    }
                  },
                  "body": [
                    {{range $i, $e := .Table.Columns}}
                    {
                      "type": "input-text",
                      "name": "{{$e.Name}}",
                      "label": "{{LineString $e.Comment}}"
                    }{{if lt (Add $i 1) $colLen}},{{end}}
                    {{end}}
                  ]
                }
              }
            },
            {
              "type": "button",
              "icon": "fa fa-times text-danger",
              "actionType": "ajax",
              "tooltip": "删除",
              "confirmText": "您确认要删除[{{printf "${%s}" $pk.Name}}]?",
              "api": {
                "method": "post",
                "url": "${API_BASEURL}/admin/common/delete",
                "data": {
                  "table_name": "{{.Table.Name}}",
                  "conditions": [
                    {
                      "op": "and",
                      "field": "id",
                      "condition_type": "eq",
                      "vals": [
                        "${id}"
                      ]
                    }
                  ]
                }
              }
            }
          ],
          "toggled": true
        }
      ],
      "affixHeader": true,
      "columnsTogglable": "auto",
      "placeholder": "暂无数据",
      "combineNum": 0,
      "bodyClassName": "panel-default"
    }
  ]
}
